import java.util.*;

public class StudentGradeTracker {
    static class Student {
        String name;
        List<Integer> grades;

        Student(String name) {
            this.name = name;
            this.grades = new ArrayList<>();
        }

        void addGrade(int grade) {
            grades.add(grade);
        }

        double average() {
            return grades.stream().mapToInt(g -> g).average().orElse(0);
        }

        int highest() {
            return grades.stream().mapToInt(g -> g).max().orElse(0);
        }

        int lowest() {
            return grades.stream().mapToInt(g -> g).min().orElse(0);
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        List<Student> students = new ArrayList<>();

        System.out.print("Enter number of students: ");
        int n = sc.nextInt();
        sc.nextLine(); // clear buffer

        for (int i = 0; i < n; i++) {
            System.out.print("Enter student name: ");
            String name = sc.nextLine();
            Student student = new Student(name);

            System.out.print("Enter number of grades: ");
            int g = sc.nextInt();
            System.out.println("Enter grades:");
            for (int j = 0; j < g; j++) {
                student.addGrade(sc.nextInt());
            }
            sc.nextLine(); // clear buffer
            students.add(student);
        }

        System.out.println("\n=== Student Summary Report ===");
        for (Student s : students) {
            System.out.printf("Name: %s | Avg: %.2f | Highest: %d | Lowest: %d%n",
                    s.name, s.average(), s.highest(), s.lowest());
        }
    }
}
